    <LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
	    tools:context=".Cliente_Consultas_Historicos_Pedidos" >

        <TextView
            android:id="@+id/cliente_name_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/subtotal_puntos"
        			android:background="@drawable/input_par"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subtotal_input"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/celdas_par"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/iva_puntos"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:background="@drawable/input_impar"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/iva_input"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/celdas_impar"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/total_facturas_puntos"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:background="@drawable/input_par"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total_facturas_input"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/celdas_par"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:background="@drawable/celdas_header"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/n_pedido"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:background="@drawable/celdas_header"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/valor_factura"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:background="@drawable/celdas_header"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/estado"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:background="@drawable/celdas_header"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/fecha"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

            <ListView
                android:id="@+id/listPedidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>

        </LinearLayout>
    </LinearLayout><!-- From: file:/Users/kate/Dropbox/Deveps/Android/Italo/app/src/main/res/layout/activity_cliente_consultas_historicos_pedidos.xml -->