<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"            
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
		android:id="@+id/layout_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
		<LinearLayout
        	android:layout_width="match_parent"
            android:layout_height="wrap_content" >
			<TextView
            	android:layout_width="0dip"
                android:layout_height="wrap_content"
				android:layout_weight="1"
                android:background="@drawable/celdas_header"
                android:text="@string/fecha"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
    					android:layout_weight="0.5"
	                 	android:background="@drawable/celdas_header"
                        android:text="@string/hora"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp">

                    <TextView
                        android:id="@+id/fecha_input"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:background="@drawable/celdas_par"
                        android:hint="@string/seleccione_una_fecha" />
                    <TextView
                        android:id="@+id/hora_input"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:background="@drawable/celdas_par"
                        android:hint="@string/hora" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/celdas_header"
                        android:text="@string/avisar"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/cantidad_tiempo_input"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:maxLength="3"
                        android:inputType="number" />

                    <Spinner
                        android:id="@+id/tipo_tiempo_input"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/celdas_header"
                        android:text="@string/antes"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/celdas_header"
        android:text="@string/observaciones"
        android:textColor="@color/white"
        android:textStyle="bold" />
	<EditText
		android:id="@+id/observaciones_input"
		android:layout_width="match_parent"
		android:layout_height="200dp"
		android:digits="@string/allow_digits" 
		android:background="@drawable/celdas"
		android:inputType="textMultiLine"
		android:maxLength="150" />
	<HorizontalScrollView
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content" >
		<LinearLayout
		    android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:orientation="vertical" >
   			<LinearLayout
        		android:layout_width="match_parent"
        		android:layout_height="match_parent"
        		android:orientation="horizontal" >
				<TextView
            		android:layout_width="wrap_content"
		            android:layout_height="fill_parent"
		            android:background="@drawable/celdas_header"
		            android:ems="8"
		            android:gravity="center"
		            android:text="@string/documeto"
		            android:textColor="@color/white"
		            android:textStyle="bold" />
				<TextView
		            android:layout_width="wrap_content"
		            android:layout_height="fill_parent"
		            android:background="@drawable/celdas_header"
		            android:ems="14"
		            android:gravity="center"
		            android:text="@string/tipo_documento"
		            android:textColor="@color/white"
		            android:textStyle="bold" />
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="fill_parent"
		            android:background="@drawable/celdas_header"
		            android:ems="5"
		            android:gravity="center"
		            android:text="@string/dias"
		            android:textColor="@color/white"
		            android:textStyle="bold" />
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="fill_parent"
		            android:background="@drawable/celdas_header"
		            android:ems="9"
		            android:gravity="center"
		            android:text="@string/valor"
		            android:textColor="@color/white"
		            android:textStyle="bold" />
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="fill_parent"
		            android:background="@drawable/celdas_header"
		            android:ems="8"
		            android:gravity="center"
		            android:text="@string/venc"
		            android:textColor="@color/white"
		            android:textStyle="bold" />
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="fill_parent"
		            android:background="@drawable/celdas_header"
		            android:ems="8"
		            android:gravity="center"
		            android:text="@string/fecha_fact"
		            android:textColor="@color/white"
		            android:textStyle="bold" />
		    </LinearLayout>
		    <ListView
		        android:id="@+id/listFacturas"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:choiceMode="multipleChoice" >
		    </ListView>
		</LinearLayout>
    </HorizontalScrollView>
</LinearLayout><!-- From: file:/Users/kate/Dropbox/Deveps/Android/Italo/app/src/main/res/layout/eventos_radicar_facturas_fecha.xml -->