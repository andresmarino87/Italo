<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
	    android:layout_margin="10dp"
	    android:background="@drawable/view_border"
    	tools:context=".Cobros_Pago_Efectivo"  >

        <TextView
            android:id="@+id/menu_actividad_diaria_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_head"
            android:gravity="center"
            android:text="@string/pago_efectivo"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
					android:layout_weight="1"
                    android:text="@string/forma_pago"
 		            android:gravity="center_vertical|left"
                    android:textStyle="bold"
                    android:background="@drawable/input_par" />

                <TextView
                    android:id="@+id/nombre_del_cliente_input"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
					android:layout_weight="1"
					android:text="@string/efectivo"
		            android:gravity="center_vertical|left"
                    android:background="@drawable/celdas_par" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
					android:layout_weight="1"
                    android:text="@string/valor"
                    android:textStyle="bold"
 		            android:gravity="center_vertical|left"
                    android:background="@drawable/input_impar" />

                <EditText
                    android:id="@+id/valor_input"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
					android:digits="@string/allow_digits" 
		            android:gravity="center_vertical|left"
                    android:maxLength="20"  >
                   	<requestFocus />
                </EditText>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout><!-- From: file:/Users/kate/Dropbox/Deveps/Android/Italo/app/src/main/res/layout/activity_cobros_pago_efectivo.xml -->