<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Actividad_Diaria_Consultar_Motivo_No_Visita" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cliente_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/celdas_header"
                android:text="@string/vendedor"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/celdas_header"
                android:text="@string/fecha"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/vendedor_input"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
				android:layout_weight="1"                
                android:padding="5dp" />
            <TextView
                android:id="@+id/fecha_actual_input"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
				android:layout_weight="0.5"
                android:padding="5dp" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/celdas_header"
            android:text="@string/evento"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/evento_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/celdas_header"
            android:text="@string/observaciones"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/observaciones_input"
            android:layout_width="match_parent"
            android:layout_height="200dp"
			android:digits="@string/allow_digits" 
            android:background="@drawable/celdas"
            android:inputType="textMultiLine"
            android:maxLength="150" />
    </LinearLayout>

</ScrollView><!-- From: file:/Users/kate/Dropbox/Deveps/Android/Italo/app/src/main/res/layout/activity_actividad_diaria_consultar_motivo_no_visita.xml -->