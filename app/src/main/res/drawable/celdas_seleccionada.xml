<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
		<shape >
   			<gradient
				android:endColor="@color/ghostwhite"
				android:startColor="@color/ghostwhite"
				android:angle="270" />
			<stroke
				android:width="1dp"
				android:color="@color/black" />
			<corners
				android:radius="0dp" />
			<padding
				android:left="10dp"
				android:top="5dp"
				android:right="10dp"
				android:bottom="5dp" />
		</shape>
	</item>
	<item android:state_activated="true">
		<shape >
			<gradient
				android:endColor="@color/royalblue2"
				android:startColor="@color/royalblue2"
				android:angle="270" />
			<stroke
				android:width="1dp"
				android:color="@color/black" />
			<corners
				android:radius="0dp" />
			<padding
				android:left="10dp"
				android:top="5dp"
				android:right="10dp"
				android:bottom="5dp" />
		</shape>
   </item>
   	<item android:state_activated="false">
		<shape >
			<gradient
				android:endColor="@color/green_mist"
				android:startColor="@color/green_mist"
				android:angle="270" />
			<stroke
				android:width="1dp"
				android:color="@color/black" />
			<corners
				android:radius="0dp" />
			<padding
				android:left="10dp"
				android:top="5dp"
				android:right="10dp"
				android:bottom="5dp" />
			
		</shape>
   </item>
 </selector>