<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="@string/documento"
            android:layout_weight="1"
            android:background="@drawable/input_impar"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/documento_input"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text=""
            android:background="@drawable/celdas_impar"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="@string/valor_factura"
            android:background="@drawable/input_par"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/valor_factura_input"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text=""
            android:background="@drawable/celdas_par"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="@string/valor_descuento_pronto_pago"
            android:background="@drawable/input_impar"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/valor_descuento_pronto_pago_input"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text=""
            android:background="@drawable/celdas_impar"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:text="@string/aplicar_descuento"
            android:layout_weight="1"
            android:background="@drawable/input_par"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium" />
		<RadioGroup
			android:id="@+id/radioGroup"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
            android:background="@drawable/celdas_par"
			android:layout_weight="1"
			android:orientation="horizontal" >
			<RadioButton
				android:id="@+id/si"
				android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
		            android:textColor="@color/black"
                    android:text="@string/si" />
                <RadioButton
                    android:id="@+id/no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:checked="true"
                    android:text="@string/no" />
       </RadioGroup>
	</LinearLayout>
</LinearLayout>