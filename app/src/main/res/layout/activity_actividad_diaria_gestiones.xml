<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
 	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/view_border"
    tools:context=".Actividad_Diaria_Gestiones" 
  >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/view_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
		android:textColor="@color/white"
        android:background="@drawable/view_head"
        android:gravity="center"
        android:text="@string/gestiones"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view_head"
        android:orientation="vertical"
        android:padding="10dp" >

        <Button
            android:id="@+id/pedidos"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="left"
            android:text="@string/pedidos"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cobros"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="left"
            android:text="@string/cobros"
            android:textStyle="bold" />

        <Button
            android:id="@+id/devoluciones"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="left"
            android:text="@string/devoluciones"
            android:textStyle="bold" />

        <Button
            android:id="@+id/registro_de_eventos"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="left"
            android:text="@string/registro_de_eventos"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>

</ScrollView>