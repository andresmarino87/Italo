<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
	    android:layout_margin="10dp"
	    android:background="@drawable/view_border"
    	tools:context=".Cobros_Pago_Consignaciones"  >

                <TextView
                    android:id="@+id/menu_actividad_diaria_header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_head"
                    android:gravity="center"
                    android:text="@string/consignaciones"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp" >

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/input_par"
                            android:gravity="center_vertical|left"
                            android:text="@string/n_cobro"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/n_cobro_input"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/celdas_par"
                            android:gravity="center_vertical|left" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/input_impar"
                            android:gravity="center_vertical|left"
                            android:text="@string/documento"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/documento_input"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/celdas_impar"
                            android:gravity="center_vertical|left" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp" >

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/input_par"
                            android:gravity="center_vertical|left"
                            android:text="@string/forma_pago"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/forma_pago"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/celdas_par"
                            android:gravity="center_vertical|left" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp" >

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/input_impar"
                            android:gravity="center_vertical|left"
                            android:text="@string/fecha_consignacion"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fecha_consignacion"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:background="@drawable/celdas_impar"
                            android:hint="@string/seleccione_una_fecha" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp" >

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/input_par"
                            android:gravity="center_vertical|left"
                            android:text="@string/numero_consignacion"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/numero_consignacion"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
							android:digits="@string/allow_digits" 
                            android:layout_weight="1"
                            android:maxLength="20" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp" >

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/input_par"
                            android:gravity="center_vertical|left"
                            android:text="@string/banco"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/banco_input"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp" >

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/input_impar"
                            android:gravity="center_vertical|left"
                            android:text="@string/cuenta"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/cuenta_input"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="105dp" >

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/input_par"
                            android:gravity="center_vertical|left"
                            android:text="@string/tipo_de_consignacion"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical" >
                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:paddingRight="50dp"
                                android:gravity="right"
    	                        android:textAppearance="?android:attr/textAppearanceMedium"
    	                        android:background="@drawable/input_impar"
	                            android:text="@string/valor" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="35dp" >

                                <CheckBox
                                    android:id="@+id/efectivoCheck"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/efectivo" />

                                <EditText
                                    android:id="@+id/efectivo_valor_input"
                                    android:layout_width="0dip"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:inputType="numberDecimal"
                                    android:maxLength="12"
                                    android:singleLine="true" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="35dp" >

                                <CheckBox
                                    android:id="@+id/chequeCheck"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/cheque" />

                                <EditText
                                    android:id="@+id/cheque_valor_input"
                                    android:layout_width="0dip"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:inputType="numberDecimal"
                                    android:maxLength="12"
                                    android:singleLine="true" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cheques_inputs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp" >

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/input_impar"
                                android:gravity="center_vertical|left"
                                android:text="@string/cuenta_cheque"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/cuenta_cheque_input"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
								android:digits="@string/allow_digits" 
                                android:maxLength="20"
                                android:singleLine="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp" >

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/input_par"
                                android:gravity="center_vertical|left"
                                android:text="@string/numero_cheque"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/numero_cheque_input"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
								android:digits="@string/allow_digits" 
                                android:maxLength="20"
                                android:singleLine="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp" >

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/input_impar"
                                android:gravity="center_vertical|left"
                                android:text="@string/fecha_cheque"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/fecha_cheque"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:hint="@string/seleccione_una_fecha"
                                android:background="@drawable/celdas_impar"
                                android:gravity="center_vertical"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp" >

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/input_par"
                                android:gravity="center_vertical|left"
                                android:text="@string/banco_cheque"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/banco_cheque_input"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp" >

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/input_impar"
                            android:gravity="center_vertical|left"
                            android:text="@string/valor"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/valor_total_input"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/celdas_impar"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp" >

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/celdas_header"
                                android:gravity="center"
                                android:text="@string/n_cobro"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/celdas_header"
                                android:gravity="center"
                                android:text="@string/forma_pago"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/celdas_header"
                                android:gravity="center"
                                android:text="@string/valor"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                        </TableRow>

                        <ListView
                            android:id="@+id/listPagos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </ListView>
                    </TableLayout>
                </LinearLayout>

    </LinearLayout>