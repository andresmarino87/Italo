<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".Consignaciones_Efectuadas" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left" >

            <TextView
                android:id="@+id/valor_consignado_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:text="@string/valor_consignado"
                android:layout_weight="1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valor_consignado_input"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:background="@drawable/input_gris"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp" >

            <TableRow
                android:id="@+id/tableRow0"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/editText1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/celdas_header"
                    android:ems="8"
                    android:gravity="center"
                    android:text="@string/n_consig"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/editText2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/celdas_header"
                    android:ems="5"
                    android:gravity="center"
                    android:text="@string/fecha"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/editText3"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/celdas_header"
                    android:ems="9"
                    android:gravity="center"
                    android:text="@string/banco"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/editText4"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/celdas_header"
                    android:ems="8"
                    android:gravity="center"
                    android:text="@string/valor"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </TableRow>

            <ListView
                android:id="@+id/listConsignado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>

        </TableLayout>

    </LinearLayout>
