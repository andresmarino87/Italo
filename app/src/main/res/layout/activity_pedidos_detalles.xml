<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Pedidos_Detalles"  >

        <TextView
            android:id="@+id/cliente_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/n_pedido_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_par"
                android:text="@string/n_pedido"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/n_pedido_input"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/celdas_par"
                android:gravity="right"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/n_articulos_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_impar"
                android:text="@string/n_articulos"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/n_articulos_input"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/celdas_impar"
                android:gravity="right"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/porc_basico_label"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/input_par"
                android:text="@string/porc_basico"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/porc_basico_input"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/celdas_par"
                android:gravity="right"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/desc_adicional_label"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/input_impar"
                android:text="@string/desc_adicional"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desc_adicional_input"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/celdas_impar"
                android:gravity="right"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/cant_item_promo_en_especie_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_par"
                android:text="@string/cant_item_promo_en_especie"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cant_item_promo_en_especie_input"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/celdas_par"
                android:gravity="right"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/valor_bruto_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_impar"
                android:text="@string/valor_bruto"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valor_bruto_input"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/celdas_impar"
                android:gravity="right"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/descuento_basico_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_par"
                android:text="@string/descuento_basico"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descuento_basico_input"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/celdas_par"
                android:gravity="right"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/descuento_adicional_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_impar"
                android:text="@string/descuento_adicional"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descuento_adicional_input"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/celdas_impar"
                android:gravity="right"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/valor_neto_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_par"
                android:text="@string/valor_neto"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valor_neto_input"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/celdas_par"
                android:gravity="right"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/appendGravables"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/valor_total_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_impar"
                android:text="@string/valor_total"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valor_total_input"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/celdas_impar"
                android:gravity="right"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/total_venta_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_par"
                android:text="@string/total_venta"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_venta_input"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/celdas_par"
                android:gravity="right"
                android:text="" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/total_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_par"
                android:text="@string/total"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_input"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/celdas_par"
                android:gravity="right" />
        </LinearLayout>
		<HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@drawable/celdas_header"
                        android:ems="20"
                        android:gravity="center"
                        android:text="@string/producto"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@drawable/celdas_header"
                        android:ems="7"
                        android:gravity="center"
                        android:text="@string/pres"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@drawable/celdas_header"
                        android:ems="7"
                        android:gravity="center"
                        android:text="@string/vr_unitario"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@drawable/celdas_header"
                        android:ems="7"
                        android:gravity="center"
                        android:text="@string/sug"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@drawable/celdas_header"
                        android:ems="7"
                        android:gravity="center"
                        android:text="@string/cant"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@drawable/celdas_header"
                        android:ems="7"
                        android:gravity="center"
                        android:text="@string/prom_especie"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@drawable/celdas_header"
                        android:ems="7"
                        android:gravity="center"
                        android:text="@string/porc_prom"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@drawable/celdas_header"
                        android:ems="7"
                        android:gravity="center"
                        android:text="@string/vr_prom"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@drawable/celdas_header"
                        android:ems="7"
                        android:gravity="center"
                        android:text="@string/iva"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@drawable/celdas_header"
                        android:ems="8"
                        android:gravity="center"
                        android:text="@string/subtotal"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </TableRow>

                <ListView
                    android:id="@+id/listPedidoDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </ListView>
            </TableLayout>
	</HorizontalScrollView>
</LinearLayout>
