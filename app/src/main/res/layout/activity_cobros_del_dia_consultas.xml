<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
	    android:layout_margin="10dp"
        android:orientation="vertical"
    android:background="@drawable/view_border"
    tools:context=".Cobros_Del_Dia_Consultas" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/view_head"
                android:gravity="center"
                android:text="@string/cobros"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
	                        android:ems="5"
                            android:background="@drawable/celdas_header"
                            android:gravity="center"
                            android:text="@string/sinc"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
	                        android:ems="15"
                            android:background="@drawable/celdas_header"
                            android:gravity="center"
                            android:text="@string/cliente"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
	                        android:ems="9"
                            android:background="@drawable/celdas_header"
                            android:gravity="center"
                            android:text="@string/n_pago"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                                                <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
	                        android:ems="9"
                            android:background="@drawable/celdas_header"
                            android:gravity="center"
                            android:text="@string/hora"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
	                        android:ems="9"
                            android:background="@drawable/celdas_header"
                            android:gravity="center"
                            android:text="@string/total_pago"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/listCobros"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:choiceMode="singleChoice" >
                    </ListView>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >
<TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_head"
        android:gravity="center"
        android:text="@string/detalle_del_recaudo"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/celdas_header"
            android:gravity="center"
            android:text="@string/tipo_documento"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/celdas_header"
            android:gravity="center"
            android:text="@string/n_documento"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/celdas_header"
            android:gravity="center"
            android:text="@string/saldo"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/celdas_header"
            android:gravity="center"
            android:text="@string/valor_pago"
            android:textColor="@color/white"
            android:textStyle="bold" />	
    </LinearLayout>

    <ListView
        android:id="@+id/listCobrosDocumentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice" >
    </ListView>
</LinearLayout>

            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >
<TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_head"
        android:gravity="center"
        android:text="@string/forma_de_pago"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@drawable/celdas_header"
                            android:gravity="center"
                            android:text="@string/forma_pago"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@drawable/celdas_header"
                            android:gravity="center"
                            android:text="@string/valor"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ListView
                        android:id="@+id/listCobrosDocumentosPagos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                    </ListView>
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
